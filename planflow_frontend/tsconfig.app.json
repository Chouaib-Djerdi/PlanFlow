{
  "compilerOptions": {
    // ...
    "jsx": "preserve", // react component error resolve
    "esModuleInterop": true, // path import error resolve
    "allowImportingTsExtensions": true, // path import error resolve
    "noEmit": true, // required for allowImportingTsExtensions
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "moduleResolution": "bundler", // update module resolution
    "module": "ESNext", // set module to NodeNext
    "target": "ES5" // update target to ES2015
    // ...
  }
}
